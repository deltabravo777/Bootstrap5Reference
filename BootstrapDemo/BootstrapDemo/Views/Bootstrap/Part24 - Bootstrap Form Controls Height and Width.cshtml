                    <label class="col-2" for="inputDOB?">Gender</label>
                    <select class="form-control input-group-sm col-4">
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                </div>
            </div>
        </form>
    </div>
    <br />
    <br />
</div>